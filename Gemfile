# Gemfile
source 'https://rubygems.org'

# Web framework for building the API
gem 'sinatra', '~> 2.1'

# MySQL database connector - essential for interacting with your database
gem 'mysql2', '~> 0.5'
gem 'bigdecimal', '~> 3.1'

# For parsing YAML configuration files (like config/database.yml)
gem 'psych', '~> 5.0'

# For parsing JSON request bodies
gem 'rack-contrib', '~> 2.3'

# Provides robust logging capabilities for application events
gem 'logger', '~> 1.4'

gem 'sinatra-reloader', '~> 1.0'
